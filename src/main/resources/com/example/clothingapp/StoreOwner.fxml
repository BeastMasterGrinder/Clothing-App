<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="30.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clothingapp.Controller.StoreOwnerController">

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="backButton" text="←" onAction="#goBack"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Log Out" onAction="#logOut"/>
    </HBox>

    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Store">
      <font>
         <Font name="Berlin Sans FB" size="43.0" />
      </font>
   </Text>

    <Button onAction="#handleAddProduct" text="Add Product">
      <font>
         <Font name="Berlin Sans FB" size="16.0" />
      </font></Button>
    <Button onAction="#handleUpdateProduct" text="Update Product">
      <font>
         <Font name="Berlin Sans FB" size="16.0" />
      </font></Button>
    <Button onAction="#handleDeleteProduct" text="Delete Product">
      <font>
         <Font name="Berlin Sans FB" size="16.0" />
      </font></Button>
    <Button onAction="#handleListProducts" text="List Products">
      <font>
         <Font name="Berlin Sans FB" size="16.0" />
      </font></Button>
    <!-- Add more buttons for other shop owner tasks -->

</VBox>
