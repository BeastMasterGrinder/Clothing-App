<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clothingapp.Controller.ShoppingCartController">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <JFXButton text="Back to Products" onAction="#backToProducts"/>
            <JFXButton text="Order Cart" onAction="#orderShoppingCart"/>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <JFXListView fx:id="cartListView" onMouseClicked="#removeFromCart"/>
        </VBox>
    </center>
</BorderPane>
